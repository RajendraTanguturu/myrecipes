<%= render 'shared/page_title', title: "#{@ingredient.name}" %>

<% if @ingredient.recipes.count != 0 %>
  <h4 align="center">Recipe's containing <%= @ingredient.name %></h4>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @ingredient_recipes %>
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
<% else %>
  <h4 align="center">No recipes yet!</h4>
<% end %>

<% if logged_in? %>
<div class="center colormatch">
      [ <%= link_to "Delete Ingredient", ingredient_path(@ingredient), method: :delete, 
        data: {confirm: "Are you sure you want to delete this ingredient from all associated recipes?"} %> ]
</div>
<% end %>

